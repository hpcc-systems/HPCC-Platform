{{- define "hpcc.k8sCPUStringToMilliCPU" -}}
{{- if hasSuffix "m" . -}}
 {{- $number := (substr 0 (int (sub (len .) 1)) .) -}}
 {{- printf "%d" (int $number) -}}
{{- else -}}
 {{- printf "%d" (int (mulf (float64 .) 1000.0)) -}}
{{- end -}}
{{- end -}}

{{/*
A template to convert bytes into a k8s human friendly string
