DESTDIR=`dirname $0`
cd $DESTDIR
export SENTINEL="saserver.sentinel"
rm -f ${SENTINEL}

export LD_LIBRARY_PATH=.:$LD_LIBRARY_PATH
export PATH=/mnt/usrbin:$PATH
pid=`pidof saserver`
if [ -n "$pid" ]; then
    ./sasha server=. action=stop
    I=1
    while [ -n "$pid" ] && [ $I -lt 30 ]; do
        echo "Waiting for saserver to stop"
        sleep 2
        pid=`pidof saserver`
        let I=I+1
        
    done
    if [ -n "$pid" ]; then
        kill -9 $pid
    fi
fi
exit 0

