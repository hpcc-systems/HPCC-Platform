ulimit -c unlimited

# dont lower limit
moflim=$(ulimit -n 2>/dev/null)
if [ -n "$moflim" ]
then
    if [ "$moflim" != "unlimited" ]
    then
        if [ $moflim -lt 8192 ]
        then
            ulimit -n 8192
        fi
    fi
else
    ulimit -n 8192
fi

export SENTINEL="eclagent.sentinel"
nohup hthor $* &
