          <row>
            <entry><emphasis>m</emphasis></entry>

            <entry>Number of diagonal entries</entry>
          </row>

          <row>
            <entry><emphasis>v</emphasis></entry>

            <entry>Option value, default is 1</entry>
          </row>

          <row>
            <entry><emphasis>X</emphasis></entry>

