use strict;
use warnings;
use FindBin qw/$Bin/;
use lib ($Bin);
use IndexMetadata;

die('Usage: readmeta indexfile [indexfile2 ...]') unless(@ARGV);
print("$_:\n", IndexMetadata::readfile($_) || "no metadata\n") foreach(@ARGV);
