                      <xs:appinfo>
                        <title>Component</title>
                        <colIndex>2</colIndex>
                      </xs:appinfo>
                    </xs:annotation>
                  </xs:attribute>
                  <xs:attribute name="dir" type="xs:string" use="optional">
                    <xs:annotation>
                      <xs:appinfo>
                        <title>Directory</title>
                        <colIndex>3</colIndex>
                      </xs:appinfo>
                    </xs:annotation>
                  </xs:attribute>
                </xs:complexType>
              </xs:element>
            </xs:sequence>
            <xs:attribute name="name" type="xs:string" use="required">
              <xs:annotation>
                <xs:appinfo>
