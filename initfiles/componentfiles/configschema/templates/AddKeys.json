{
    "name" : "Add Key",
    "type" : "modification",
    "variables" : [
        {
            "name" : "keypair_name",
            "type" : "string",
            "values" : ["mythor"]
        },
        {
            "name" : "public_key",
            "type" : "string",
            "values" : ["/home/jsmith/.ssh/id_rsa.pub.pem"]
        },
        {
            "name" : "private_key",
            "type" : "string",
            "values" : ["/home/jsmith/.ssh/id_rsa"]
        },
        {
            "name" : "key_pair_name",
            "type" : "string",
            "values" : ["mythor"]
        }
    ],
    "operations" : [
        {
            "action" : "delete",
            "target_path" : "/Environment/EnvSettings/Keys",
            "data" : {
                "error_if_not_found" : false
            }
        },
        {
            "action" : "create",
            "target_path" : "/Environment/EnvSettings",
            "data" : {
                "node_type" : "Keys",
                "save" : {
                    "name" : "keys_node"
                }
            }
        },
        {
            "action" : "create",
            "target_nodeid" : "{{keys_node}}",
            "data" : {
                "node_type" : "keypair",
                "attributes" : [
                    {
                        "name" : "name",
                        "value" : "{{keypair_name}}"
                    },
                    {
                        "name" : "publicKey",
                        "value" : "{{public_key}}"
                    },
                    {
                        "name" : "privateKey",
                        "value" : "{{private_key}}"
                    }
                ]
            }
        },
        {
            "action" : "find",
            "target_path" : "/Environment/Software/ThorCluster",
            "data" : {
                "attributes" : [
                    {
                        "name" : "name",
                        "save" : {
                            "name" : "cluster_names",
                            "duplicate_ok" : true
                        }
                    }
                ]
            }
        },
        {
            "action" : "find",
            "target_path" : "/Environment/Software/RoxieCluster",
            "data" : {
                "attributes" : [
                    {
                        "name" : "name",
                        "save" : {
                            "name" : "cluster_names",
                            "duplicate_ok" : true
                        }
                    }
                ]
            }
        },
        {
            "action" : "find",
            "target_path" : "/Environment/Software/EclAgentProcess",
            "data" : {
                "attributes" : [
                    {
                        "name" : "name",
                        "save" : {
                            "name" : "cluster_names",
                            "duplicate_ok" : true
                        }
                    }
                ]
            }
        },
        {
            "action" : "create",
            "target_nodeid" : "{{keys_node}}",
            "data" : {
                "node_type" : "keypair_clustergroup",
                "count" : "{{cluster_names.size}}",
                "attributes" : [
                    {
                        "name" : "name",
                        "value" : "{{cluster_names}}"
                    },
                    {
                        "name" : "keyPairName",
                        "value" : "{{keypair_name}}"
                    }
                ]
            }
        }
    ]
}
