compName=$1
hpcc_setenv=$2

source ${hpcc_setenv}

slavename=thorslave_${compName}

killall -0 $slavename &> /dev/null
if [ $? -eq 0 ];then
  killall -9 $slavename
fi
rm -f $PID/${compName}_slave_*.pid
