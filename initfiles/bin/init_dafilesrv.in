###<REPLACE>###

if [ -z $1 ]; then
        log=${LOG_DIR}/dafilesrv
else
        log=$1
fi

shift

PATH_PRE=`type -path hpcc_setenv`
source ${PATH_PRE}
PID_NAME="$PID/`basename $PWD`.pid"

INIT_PID_NAME="$PID/init_`basename $PWD`.pid"
echo $$ > $INIT_PID_NAME

# this must match jsocket hard limit
export handlelimit=32768

export SENTINEL="dafilesrv.sentinel"
rm -f ${SENTINEL}

killed(){
    rm -f ${SENTINEL}
    killall -9 dafilesrv 2> /dev/null
    sleep 2
    exit 255
}
ulimit -n $handlelimit
trap "killed" SIGINT SIGTERM SIGKILL
dafilesrv -L $log &
echo $! > $PID_NAME
wait

while [ -e ${SENTINEL} ]; do
    sleep 5
    if [ -e ${SENTINEL} ]; then
        dafilesrv -L $log &
        echo $! > $PID_NAME
        wait
    fi
done
