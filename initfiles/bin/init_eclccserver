#!/bin/bash
## Copyright © 2011 HPCC Systems.  All rights reserved.

PATH_PRE=`type -path hpcc_setenv`
source ${PATH_PRE}
PID_NAME="$PID/`basename $PWD`.pid"

INIT_PID_NAME="$PID/init_`basename $PWD`.pid"
echo $$ > $INIT_PID_NAME

killed() {
    PATH_PRE=`type -path hpcc_setenv`
    source ${PATH_PRE}
    PID_NAME="$PID/`basename $PWD`.pid"

    if [ -e eclccserver.sentinel ]; then
            rm -f eclccserver.sentinel
            if [ -e ${PID_NAME} ]; then
                    pidwait_fn `cat ${PID_NAME}` 3
            fi
    fi
    sleep 2
    exit 255
}

trap "killed" SIGINT SIGTERM SIGKILL
eclccserver 1>/dev/null 2>/dev/null &
echo $! > $PID_NAME
wait

while [ -e eclccserver.sentinel ]; do
    sleep 5
    if [ -e eclccserver.sentinel ]; then
        eclccserver 1>/dev/null 2>/dev/null & 
        echo $! > $PID_NAME
        wait
    fi
done

