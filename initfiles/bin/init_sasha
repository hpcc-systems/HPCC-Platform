#!/bin/bash
## Copyright © 2011 HPCC Systems.  All rights reserved.

PATH_PRE=`type -path hpcc_setenv`
source ${PATH_PRE}
PID_NAME="$PID/`basename $PWD`.pid"

INSTALL_DIR=`dirname ${PATH_PRE}`/..
source  ${INSTALL_DIR}/etc/init.d/hpcc_common

INIT_PID_NAME="$PID/init_`basename $PWD`.pid"
echo $$ > $INIT_PID_NAME

export SENTINEL="saserver.sentinel"

ulimit -c unlimited
ulimit -n 8192

which_pidof

killed() {

    rm -f ${SENTINEL}
    pid=`${PIDOF} saserver`
    if [ -n "$pid" ]; then
        sasha server=. action=stop
        I=1
        while [ -n "$pid" ] && [ $I -lt 30 ]; do
            echo "Waiting for saserver to stop"
            sleep 2
            pid=`${PIDOF} saserver`
            let I=I+1
        
        done
        if [ -n "$pid" ]; then
            kill -9 $pid
        fi
    fi
    sleep 2
    exit 255
}

trap "killed" SIGINT SIGTERM SIGKILL
export LANG=en_US
saserver 1>/dev/null 2>/dev/null &
echo $! > $PID_NAME
wait

while [ -e ${SENTINEL} ]; do
    sleep 5
    if [ -e ${SENTINEL} ]; then
        saserver 1>/dev/null 2>/dev/null &
        echo $! > $PID_NAME
        wait
    fi
done
