#!/bin/bash
## Copyright © 2011 HPCC Systems.  All rights reserved.

PATH_PRE=`type -path hpcc_setenv`
source ${PATH_PRE}
PID_NAME="$PID/`basename $PWD`.pid"

INIT_PID_NAME="$PID/init_`basename $PWD`.pid"
echo $$ > $INIT_PID_NAME

ulimit -c unlimited
ulimit -n 8192
export LANG=en_US
SNMPID=$$

killed() {
    rm -rf configesp_sentinel.txt
    killall -9 configesp 2>/dev/null
    sleep 1
    exit 255
}

trap "killed" SIGINT SIGTERM SIGKILL

nohup configesp 1>/dev/null 2>/dev/null &
echo $! > $PID_NAME
wait

while [ -e configesp_sentinel.txt ]; do
        sleep 5
        if [ -e configesp_sentinel.txt ]; then
                nohup configesp 1>/dev/null 2>/dev/null &
        echo $! > $PID_NAME
        wait
        fi
done

