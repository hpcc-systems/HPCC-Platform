#!/bin/bash
## Copyright © 2011 HPCC Systems.  All rights reserved.

PATH_PRE=`type -path hpcc_setenv`
source ${PATH_PRE}
PID_NAME="$PID/`basename $PWD`.pid"

INIT_PID_NAME="$PID/init_`basename $PWD`.pid"
echo $$ > $INIT_PID_NAME



ulimit -n 8192

killed(){
    dalistop .
    rm -rf daserver_sentinel.txt
    exit 255
}


trap "killed" SIGINT SIGTERM SIGKILL
echo "rerun" > daserver_sentinel.txt
daserver 1>/dev/null 2>/dev/null &
echo $! > $PID_NAME
wait


while [ -e daserver_sentinel.txt ]; do
    sleep 5
        if [ -e daserver_sentinel.txt ]; then
            trap "killed" SIGINT SIGTERM SIGKILL
        daserver 1>/dev/null 2>/dev/null &
                echo $! > $PID_NAME
                wait
        fi
done
