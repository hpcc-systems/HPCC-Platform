PATH_PRE=`type -path hpcc_setenv`
source ${PATH_PRE}
PID_NAME="$PID/`basename $PWD`.pid"

INIT_PID_NAME="$PID/init_`basename $PWD`.pid"
echo $$ > $INIT_PID_NAME

export SENTINEL="daserver.sentinel"
rm -f ${SENTINEL}

ulimit -c unlimited
ulimit -n 8192

killed(){
    dalistop .
    kill_process ${SENTINEL} ${PID_NAME} 3
    exit 255
}

trap "killed" SIGINT SIGTERM SIGKILL
daserver 1>/dev/null 2>/dev/null &
echo $! > $PID_NAME
wait
rm $PID_NAME

while [ -e ${SENTINEL} ]; do
    sleep 5
    if [ -e ${SENTINEL} ]; then
        daserver 1>/dev/null 2>/dev/null &
        echo $! > $PID_NAME
        wait
        rm $PID_NAME
    fi
done
