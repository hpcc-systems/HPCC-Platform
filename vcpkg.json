{
    "$schema": "https://raw.githubusercontent.com/microsoft/vcpkg/master/scripts/vcpkg.schema.json",
    "name": "hpcc-platform",
    "version": "8.6.0",
    "dependencies": [
        "apr",
        "apr-util",
	    "azure-core-cpp",
        "azure-storage-common-cpp",
        "azure-storage-blobs-cpp",
        "azure-storage-files-shares-cpp",
        "boost-property-tree",
        "boost-regex",
        "curl",
        "icu",
        {
            "name": "libarchive",
            "default-features": false,
            "features": [
                "bzip2"
            ]
        },
        {
            "name": "libiconv",
            "platform": "osx"
        },
        "librdkafka",
        {
            "name": "libmysql",
            "platform": "!(windows & x86)"
        },
        "libxml2",
        {
            "name": "libxslt",
            "default-features": false,
            "features": []
        },
        "openblas",
        "openssl",
        "python3",
        {
            "name": "winflexbison",
            "platform": "windows"
        },
        "zlib"
    ]
}