# minimal CMakeLists.txt for the AWS SDK for C++
cmake_minimum_required(VERSION 2.8)

# "my-example" is just an example value.
project(sqshpcc)

# Locate the AWS SDK for C++ package.
# Requires that you build with:
#   -Daws-sdk-cpp_DIR=/path/to/sdk_build
# or export/set:
#   CMAKE_PREFIX_PATH=/path/to/sdk_build
find_package(aws-sdk-cpp)

# Link to the SDK shared libraries.
add_definitions(-DUSE_IMPORT_EXPORT)
add_subdirectory(headers)
add_subdirectory(src)
add_subdirectory(doc)
# add_subdirectory(tests)

set(CMAKE_PREFIX_PATH /aws)
set(CMAKE_INCLUDE_PATH ${CMAKE_SOURCE_DIR}/headers)
set(INCLUDE_DIR ${CMAKE_SOURCE_DIR}/headers)
include_directories (BEFORE ${INCLUDE_DIR})  

#target_include_directories(sqshpcc PUBLIC ${CMAKE_SOURCE_DIR}/headers)

# The executable name and its sourcefiles
add_executable(sqshpcc ${CMAKE_SOURCE_DIR}/src/sqshpcc.cpp)
target_include_directories(sqshpcc PUBLIC ${CMAKE_SOURCE_DIR}/headers)
#include_directories("/Users/hezouatz/Documents/SAP/aws/build")



# The libraries used by your executable.
# "aws-cpp-sdk-s3" is just an example.
target_link_libraries(sqshpcc aws-cpp-sdk-sqs)


